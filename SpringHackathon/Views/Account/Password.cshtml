@model PasswordModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>User Data</title>
    <link href="/css/ChangePasswordPage.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="wave"></div>
        <div class="wave"></div>
        <div class="wave"></div>
        <div class="wave"></div>
        <div class='light x4'></div>
        <div class='light x5'></div>
        <div class='light x6'></div>
        <div class='light x7'></div>
        <div class='light x8'></div>
        <div class='light x9'></div>
        <section class="data-search">
            <div class="edit-form">
                @if (ViewBag.IsSuccess == true)
                {
                    <div class="alert alert-success" role="alert">
                        Your password successfully changed!
                    </div>
                }
                else if (ViewBag.ModelError != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.ModelError
                    </div>
                }
                    <form asp-action="Password" method="post" class="form-container">
                        <div class="form-group">
                            <h1 class="text"> Old Password:</h1>
                            <input asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h1 class="text"> New Password:</h1>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h1 class="text"> Confirm Password:</h1>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn">Change Password</button>
                    </form>
            </div>
        </section>
    </div>
</body>
</html>